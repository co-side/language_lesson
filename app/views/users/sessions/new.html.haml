%h2.text-center 外国語レッスン
.card
  .card-body
    = simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f|
      = f.input :email, required: false, autofocus: true
      = f.input :password, required: false
      = f.button :submit, 'ログイン', class: 'btn-outline-success'
    %hr/
    = link_to 'アカウントを登録する', new_registration_path(resource_name), class: 'btn btn-outline-primary'